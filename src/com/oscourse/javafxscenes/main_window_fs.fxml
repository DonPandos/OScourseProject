<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.oscourse.controllers.MainWindowController">
   <children>
      <MenuBar fx:id="menuBar" prefHeight="20.0" prefWidth="1000.0" styleClass="menu-bar" stylesheets="@style.css">
        <menus>
          <Menu id="img-menu" mnemonicParsing="false" styleClass="menu-icon">
            <items>
              <MenuItem id="img-menu" mnemonicParsing="false" styleClass="menu-item" text="Информация о системе" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" styleClass="menu" text="Настройки">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" styleClass="menu" text="Справка">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TableView fx:id="tv" layoutX="330.0" layoutY="40.0" prefHeight="480.0" prefWidth="670.0">
        <columns>
          <TableColumn fx:id="filenameColumn" prefWidth="294.0" text="Название файла" />
            <TableColumn fx:id="sizeColumn" prefWidth="70.0" text="Размер" />
          <TableColumn fx:id="extensionColumn" minWidth="0.0" prefWidth="90.0" text="Расширение" />
            <TableColumn fx:id="dateColumn" prefWidth="110.0" text="Дата создания" />
            <TableColumn id="last-column" fx:id="typeColumn" text="Тип файла" />
        </columns>
      </TableView>
      <Button layoutX="330.0" layoutY="525.0" mnemonicParsing="false" text="Создать файл" />
   </children>
</AnchorPane>
